                    sha256  e17146e06474eb9bd932c164c92c16bdadb60320123ccba04c4bb2db0d3eb788

depends_build       port:pkgconfig

depends_lib         port:freetype \
                    port:potrace \
                    port:texlive-bin \
                    port:zlib

